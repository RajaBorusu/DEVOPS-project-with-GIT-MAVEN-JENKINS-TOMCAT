pipeline {
    agent any

    environment {
        MAVEN_HOME = "/usr/share/maven"
        PATH = "$MAVEN_HOME/bin:$PATH"

        // JFrog details
        ARTIFACTORY_URL = "http://<EC2-PUBLIC-IP>:8081/artifactory"
        ARTIFACTORY_REPO = "libs-release-local"
        ARTIFACT_NAME = "mywebapp"
        ARTIFACT_VERSION = "1.0"

        // Jenkins credentials for JFrog (username/password)
        ARTIFACTORY_USER = credentials('jfrog-username')
        ARTIFACTORY_PASS = credentials('jfrog-password')

        // Tomcat path
        TOMCAT_HOME = "/opt/tomcat"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/yourname/mywebapp.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn -B clean package'
            }
        }

        stage('Upload WAR to JFrog') {
            steps {
                sh """
                curl -u $ARTIFACTORY_USER:$ARTIFACTORY_PASS \
                -T target/${ARTIFACT_NAME}.war \
                "$ARTIFACTORY_URL/$ARTIFACTORY_REPO/com/${ARTIFACT_NAME}/${ARTIFACT_VERSION}/${ARTIFACT_NAME}-${ARTIFACT_VERSION}.war"
                """
            }
        }

        stage('Download WAR from JFrog & Deploy to Tomcat') {
            steps {
                sh """
                curl -u $ARTIFACTORY_USER:$ARTIFACTORY_PASS \
                -o ${ARTIFACT_NAME}.war \
                "$ARTIFACTORY_URL/$ARTIFACTORY_REPO/com/${ARTIFACT_NAME}/${ARTIFACT_VERSION}/${ARTIFACT_NAME}-${ARTIFACT_VERSION}.war"

                cp ${ARTIFACT_NAME}.war $TOMCAT_HOME/webapps/
                """
            }
        }
    }
}
